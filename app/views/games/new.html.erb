<h1>New Game</h1>

<% @tirage.each do |letter| %>
  <ul>
   <li><%= letter %></li>
  </ul>
<% end %>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input name="word_list" type="hidden" value=<%= @tirage.join(',') %>>
  <input type="text" name="word" placeholder="What's the longest word you find?">
  <input type="submit" value="Play!">
</form>
